@using DAL.ViewModels.Dashboard
@model DashboardVM
@{
    ViewData["Title"] = "Dashboard - Your Ultimate Movie Destination";
}



<!-- Hero Section -->
    <section class="hero-section" style="background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/Assets/Customer/Home/hero-moviemart-banner.png'); background-size: cover; background-position: center; padding: 120px 0;">
        <div class="container">
            <div class="hero-content text-center text-white py-5">
                <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInDown">Welcome to MovieMart</h1>
                <p class="lead mb-5 animate__animated animate__fadeInUp">Discover the best movies, TV series, and cinemas all in one place</p>
            </div>
        </div>
    </section>


<div class="container">


    <!-- Categories -->
    <section>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Movie Categories</h2>
            <a asp-area="Customer" asp-controller="Categories" asp-action="Index" class="btn btn-outline-primary">View All</a>
        </div>
        <div class="row">
            @foreach (var category in Model.MovieCategories)
            {
                <div class="col-md-2 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content("~/" + category.ImgUrl)" class="card-img-top" alt="@category.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text small text-muted">@category.Description</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-area="Customer" asp-controller="Categories" asp-action="Details"
                               asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary w-100">Browse</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


    <!-- Recent Movies -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Recent Movies</h2>
            <a asp-area="Customer" asp-controller="Movie" asp-action="Index" class="btn btn-outline-primary">View All</a>
        </div>
        <div class="row">
            @foreach (var movie in Model.RecentMovies)
            {
                <div class="col-md-2 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content("~/" + movie.ImgUrl)" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-muted">@movie.ReleaseYear</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">$@movie.Price</span>
                                <span class="text-warning">
                                    <i class="fas fa-star"></i> @movie.Rating?.ToString("0.0")
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-area="Customer" asp-controller="Movie" asp-action="Details"
                               asp-route-id="@movie.Id" class="btn btn-sm btn-primary w-100">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


    <!-- Recent Cinemas -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Recent Cinemas</h2>
            <a asp-area="Customer" asp-controller="Cinemas" asp-action="Index" class="btn btn-outline-primary">View All</a>
        </div>
        <div class="row">
            @foreach (var cinema in Model.RecentCinemas)
            {
                <div class="col-md-2 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content("~/" + cinema.ImgUrl)" class="card-img-top" alt="@cinema.Name">
                        <div class="card-body">
                            <h5 class="card-title">@cinema.Name</h5>
                            <p class="card-text text-muted">@cinema.Location</p>
                            <p class="card-text text-muted">@cinema.Description</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-area="Customer" asp-controller="Cinema" asp-action="Details"
                               asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-primary w-100">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


    <!-- Popular TV Series -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Popular TV Series</h2>
            <a asp-area="Customer" asp-controller="TvSeries" asp-action="Popular" class="btn btn-outline-primary">View All</a>
        </div>
        <div class="row">
            @foreach (var series in Model.PopularSeries)
            {
                <div class="col-md-2 mb-4">
                    <div class="card h-100">
                        <img src="@Url.Content("~/" + series.ImgUrl)" class="card-img-top" alt="@series.Title">
                        <div class="card-body">
                            <h5 class="card-title">@series.Title</h5>
                            <p class="card-text text-muted">@series.ReleaseYear</p>
                            <div class="text-warning">
                                <i class="fas fa-star"></i> @series.Rating?.ToString("0.0")
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-area="Customer" asp-controller="TvSeries" asp-action="Details"
                               asp-route-id="@series.Id" class="btn btn-sm btn-outline-primary w-100">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>



</div>

    <!-- Call to Action -->
    <section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Ready for an amazing movie experience?</h2>
        <p class="lead mb-4">Join thousands of happy customers enjoying our services</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-4">
                Sign Up Now
            </a>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                Browse Movies
            </a>
        </div>
    </div>
</section>

<style>
    .hero-section {
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/Assets/Customer/hero-bg.jpg');
        background-size: cover;
        background-position: center;
        padding: 100px 0;
        margin-bottom: 50px;
    }

    .cinema-card {
        transition: all 0.3s ease;
    }

        .cinema-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .cinema-img-container {
        height: 200px;
        overflow: hidden;
    }

        .cinema-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .category-card {
        background: rgba(255,255,255,0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .category-card:hover {
            background: rgba(255,255,255,0.2);
            transform: scale(1.05);
        }

    .category-icon {
        color: rgba(255,255,255,0.5);
    }
</style>

