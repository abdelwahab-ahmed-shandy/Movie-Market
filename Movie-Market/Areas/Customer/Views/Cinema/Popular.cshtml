@model IEnumerable<DAL.ViewModels.Cinema.CinemaIndexVM>

@{
    ViewData["Title"] = "Popular Cinemas";
}

<h1>Popular Cinemas</h1>

<div class="row">
    @foreach (var cinema in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@cinema.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@cinema.Location</h6>
                    <p class="card-text">@(cinema.Description?.Length > 100 ? cinema.Description.Substring(0, 100) + "..." : cinema.Description)</p>
                    <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">View All Cinemas</a>
</div>