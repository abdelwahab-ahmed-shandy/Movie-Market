@model DAL.ViewModels.Season.SeasonDetailsVM

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImgUrl))
            {
                <img src="@Model.ImgUrl" class="img-fluid rounded" alt="@Model.Title">
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                    <i class="fas fa-tv fa-3x text-muted"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <h4 class="text-muted">Season @Model.SeasonNumber of @Model.TvSeriesTitle</h4>
            <p class="lead">@Model.ReleaseYear</p>

            @* @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-3">
                    <h5>About This Season</h5>
                    <p>@Model.Description</p>
                </div>
            } *@

            <div class="mt-3">
                <a asp-controller="TvSeries" asp-action="Details" asp-route-id="@Model.TvSeriesId"
                   class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to TV Series
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h4 class="mb-0">Episodes (@Model.Episodes.Count)</h4>
        </div>
        <div class="card-body">
            @if (Model.Episodes.Any())
            {
                <div class="list-group">
                    @foreach (var episode in Model.Episodes)
                    {
                        <a asp-controller="Episode" asp-action="Details" asp-route-id="@episode.Id"
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@episode.EpisodeNumber. @episode.Title</h5>
                                <small>@episode.Duration.ToString(@"hh\:mm")</small>
                            </div>
                            @if (!string.IsNullOrEmpty(episode.Description))
                            {
                                <p class="mb-1">
                                    @(episode.Description.Length > 100 ?
                                                            episode.Description.Substring(0, 100) + "..." : episode.Description)
                    </p>
                                        }
                            @if (episode.ReleaseDate.HasValue)
                            {
                                <small class="text-muted">Released: @episode.ReleaseDate.Value.ToString("MMMM d, yyyy")</small>
                            }
                        </a>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No episodes available for this season.</p>
            }
        </div>
    </div>
</div>