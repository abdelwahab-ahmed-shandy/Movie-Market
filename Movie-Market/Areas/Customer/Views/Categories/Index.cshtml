@model IEnumerable<DAL.ViewModels.Category.CategoryIndexVM>

@{
	ViewData["Title"] = "Movie Ratings";
}

<div class="container py-5">
	<h1 class="text-center mb-5">@ViewData["Title"]</h1>

	@* @await Component.InvokeAsync("PopularCategories", new { count = 5 }) *@

	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
		@foreach (var category in Model)
		{
			<div class="col">
				<div class="card h-100 shadow-sm">

					@* @if (!string.IsNullOrEmpty(category.ImageUrl)) *@
					@* { *@
					@* 	<img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;"> *@
					@* } *@
					
					<div class="card-body">
						<h5 class="card-title">@category.Name</h5>
						<p class="card-text text-muted">@category.Description</p>
					</div>
					<div class="card-footer bg-transparent">
						<div class="d-flex justify-content-between align-items-center">
							<small class="text-muted">@category.MoviesCount Movies</small>
							<a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
								explore
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</div>