@model IEnumerable<DAL.ViewModels.Category.CategoryIndexVM>

@if (Model.Any())
{
	<div class="popular-categories mb-5">
		<h3 class="mb-4 text-center">Popular categories</h3>
		<div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
			@foreach (var category in Model)
			{
				<div class="col">
					<div class="card h-100 border-0 shadow-sm">
						<a asp-action="Details" asp-route-id="@category.Id" class="text-decoration-none">
							@* @if (!string.IsNullOrEmpty(category.ImageUrl)) *@
							@* { *@
							@* 	<img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 100px; object-fit: cover;"> *@
							@* } *@
							<div class="card-body text-center p-2">
								<h6 class="card-title mb-0">@category.Name</h6>
								<small class="text-muted">@category.MoviesCount Movies</small>
							</div>
						</a>
					</div>
				</div>
			}
		</div>
	</div>
}