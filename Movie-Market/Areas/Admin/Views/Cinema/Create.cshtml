@model CinemaAdminVM

@{
    ViewData["Title"] = "Create Cinema";
}



<h1>Create Cinema</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CurrentState" class="col-sm-2 col-form-label"></label>
            <select asp-for="CurrentState" asp-items="Html.GetEnumSelectList<CurrentState>()" class="form-control"></select>
            <span asp-validation-for="CurrentState" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IconFile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IconFile" type="file" class="form-control" />
            <span asp-validation-for="IconFile" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group d-flex justify-content-end gap-1 mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


</form>

