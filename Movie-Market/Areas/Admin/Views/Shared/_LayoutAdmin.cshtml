    <script src="~/assets/dashboard/js/datatables-simple-demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await Html.PartialAsync("_NotificationAdmin")

    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)

    <script>
$(document).ready(function() {
    loadNotifications();
    
    // Refresh every 30 seconds
    setInterval(loadNotifications, 30000);
    
    // Handle notification clicks
    $(document).on('click', '.notification-item', function(e) {
        e.preventDefault();
        var notificationId = $(this).data('id');
        var url = $(this).attr('href');
        
        // Mark as read via AJAX
        $.post('@Url.Action("MarkAsRead", "Notification", new { area = "Admin" })', {
            notificationId: notificationId,
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
        }, function() {
            window.location.href = url;
        });
    });
});

function loadNotifications() {
    $.get('@Url.Action("GetNotifications", "Notification", new { area = "Admin" })', function(data) {
        $('#notificationCount').text(data.Count);
        
        var notificationHtml = '';
        if (data.Notifications && data.Notifications.length > 0) {
            $.each(data.Notifications, function(index, item) {
                notificationHtml += `
                    <li>
                        <a class="dropdown-item d-flex align-items-center py-2 px-3 notification-item" 
                           href="${item.Url}" data-id="${item.Id}">
                            <div class="me-3 bg-${item.IconColor} bg-opacity-10 rounded-circle p-2">
                                <i class="${item.IconClass} text-${item.IconColor}"></i>
                            </div>
                            <div>
                                <div class="small text-muted">${item.TimeAgo}</div>
                                <span>${item.Message}</span>
                            </div>
                        </a>
                    </li>
                    <li><hr class="dropdown-divider m-0"></li>
                `;
            });
        } else {
            notificationHtml = `
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2 px-3" href="#">
                        <div class="text-center w-100 text-muted">
                            No new notifications
                        </div>
                    </a>
                </li>
                <li><hr class="dropdown-divider m-0"></li>
            `;
        }
        
        $('#notificationItems').html(notificationHtml);
    }).fail(function() {
        $('#notificationItems').html(`
            <li>
                <a class="dropdown-item d-flex align-items-center py-2 px-3" href="#">
                    <div class="text-center w-100 text-danger">
                        Error loading notifications
                    </div>
                </a>
            </li>
        `);
    });
}

    </script>

</body>
