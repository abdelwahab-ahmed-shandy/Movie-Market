                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "User" ? "active" : "")" asp-area="Admin" asp-controller="User" asp-action="Admins">
                                    <div class="sb-nav-link-icon"><i class="fas fa-user-shield"></i></div>
