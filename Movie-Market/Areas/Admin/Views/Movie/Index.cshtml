@model IEnumerable<DAL.ViewModels.Movie.MovieAdminListVM>

@{
    ViewData["Title"] = "Manage Movies";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImgUrl))
                    {
                        <img src="@item.ImgUrl" alt="@item.Title" style="max-width: 80px; max-height: 80px;" />
                    }
                </td>
                <td>@item.Title</td>
                <td>@item.CategoryName</td>
                <td>$@item.Price</td>
                <td>@(item.Rating?.ToString("0.0") ?? "N/A")</td>
                <td>
                    @if (item.IsDeleted)
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>

                        @if (item.IsDeleted)
                        {
                            <form method="post" asp-action="Restore" asp-route-id="@item.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Restore</button>
                            </form>
                            <form method="post" asp-action="DeletePermanently" asp-route-id="@item.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to permanently delete this movie?')">
                                    Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-action="SoftDelete" asp-route-id="@item.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>