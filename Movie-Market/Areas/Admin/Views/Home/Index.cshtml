@model DAL.ViewModels.Dashboard.AdminDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white shadow">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="font-weight-bold mb-0">Welcome to the Control Panel</h4>
                            <p class="mb-0">Here you can manage all aspects of the system.</p>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-chart-line fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <h1 class="mt-4">Dashboard</h1>

    <div class="row">
        <!-- Categories Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Categories
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalCategories</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-primary" style="width: @(Model.TotalCategories * 2)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalCategories * 2)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-primary opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Categories")" class="text-xs text-primary">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movies Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Total Movies
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalMovies</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-danger" style="width: @(Model.TotalMovies)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalMovies)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-film fa-2x text-danger opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Movie")" class="text-xs text-danger">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- TV Series Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total TV Series
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalTvSeries</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-success" style="width: @(Model.TotalTvSeries * 3)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalTvSeries * 3)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tv fa-2x text-success opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "TvSeries")" class="text-xs text-success">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Users
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalUsers</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-info" style="width: @(Model.TotalUsers)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalUsers)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-info opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Users")" class="text-xs text-info">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Total Orders
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalOrders</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar bg-warning" style="width: @(Model.TotalOrders)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalOrders)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-warning opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Order")" class="text-xs text-warning">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Characters Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-purple shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-purple text-uppercase mb-1">
                                Total Characters
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalCharacters</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar" style="background-color: #6f42c1; width: @(Model.TotalCharacters)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalCharacters)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-astronaut fa-2x text-purple opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Character")" class="text-xs text-purple">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cinemas Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-orange shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-orange text-uppercase mb-1">
                                Total Cinemas
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalCinemas</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar" style="background-color: #fd7e14; width: @(Model.TotalCinemas)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalCinemas)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-orange opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Cinema")" class="text-xs text-orange">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Specials Card -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-pink shadow h-100 py-2 hover-effect">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-pink text-uppercase mb-1">
                                Active Specials
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800 count-up">@Model.TotalActiveSpecials</div>
                            <div class="mt-2">
                                <div class="progress progress-sm">
                                    <div class="progress-bar" style="background-color: #e83e8c; width: @(Model.TotalActiveSpecials * 10)%;"></div>
                                </div>
                                <small class="text-muted">@(Model.TotalActiveSpecials * 10)% of target</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-percentage fa-2x text-pink opacity-25"></i>
                        </div>
                    </div>
                    <div class="mt-2 text-right">
                        <a href="@Url.Action("Index", "Specials")" class="text-xs text-pink">
                            View all <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Recent Orders</h6>
                <a href="@Url.Action("AllOrders", "Order")" class="btn btn-sm btn-primary">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.ApplicationUser?.UserName</td>
                                <td>@order.OrderDate.ToString("g")</td>
                                <td>@order.OrderTotal.ToString("C")</td>
                                <td title="@order.Status">
                                    <span class="badge @GetStateBadgeClass(order.Status)">
                                        @order.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Recent Subscriber -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Recent Subscriber</h6>
            <a href="@Url.Action("Index", "Subscribers")" class="btn btn-sm btn-primary">
                View All <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Subscriber ID</th>
                            <th>Mail</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentSubscriber)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Email</td>
                                <td>@order.SubscribedAt</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fc;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        border: none;
    }

    .card-body {
        padding: 1.5rem;
    }

    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

    .text-purple {
        color: #6f42c1 !important;
    }

    .text-orange {
        color: #fd7e14 !important;
    }

    .text-pink {
        color: #e83e8c !important;
    }

    .text-teal {
        color: #20c997 !important;
    }

    .border-left-purple {
        border-left: 0.25rem solid #6f42c1 !important;
    }

    .border-left-orange {
        border-left: 0.25rem solid #fd7e14 !important;
    }

    .border-left-pink {
        border-left: 0.25rem solid #e83e8c !important;
    }

    .border-left-teal {
        border-left: 0.25rem solid #20c997 !important;
    }

    .card-body a {
        transition: all 0.2s ease;
        font-weight: 600;
    }

        .card-body a:hover {
            text-decoration: none;
            transform: translateX(3px);
        }

    .col-auto i {
        transition: all 0.3s ease;
    }

    .hover-effect:hover .col-auto i {
        opacity: 0.8 !important;
        transform: scale(1.1);
    }

    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
        border-radius: 8px;
    }

    table {
        border-collapse: separate;
        border-spacing: 0;
    }

    th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 10;
    }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #e3e6f0;
    }

    .table thead th {
        border-bottom-width: 2px;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.75em;
        font-weight: 600;
        letter-spacing: 0.5px;
        border-radius: 50rem;
    }

    .bg-success {
        background-color: #1cc88a !important;
    }

    .bg-secondary {
        background-color: #858796 !important;
    }

    .bg-danger {
        background-color: #e74a3b !important;
    }

    .bg-warning {
        background-color: #f6c23e !important;
    }

    .bg-info {
        background-color: #36b9cc !important;
    }

    .count-up {
        font-size: 1.5rem;
        font-weight: 700;
    }

    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }

    h1.mt-4 {
        font-weight: 600;
        color: #2e3a4d;
        margin-bottom: 1.5rem;
    }

    tbody tr {
        transition: all 0.2s ease;
    }

        tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.005);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .progress {
        height: 0.5rem;
        border-radius: 0.25rem;
        background-color: #eaecf4;
    }

    .progress-bar {
        border-radius: 0.25rem;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.count-up').each(function() {
                $(this).prop('Counter', 0).animate({
                    Counter: $(this).text()
                }, {
                    duration: 1500,
                    easing: 'swing',
                    step: function(now) {
                        $(this).text(Math.ceil(now));
                    }
                });
            });

            $('tbody tr').hover(
                function() {
                    $(this).css('box-shadow', '0 4px 8px rgba(0,0,0,0.1)');
                },
                function() {
                    $(this).css('box-shadow', 'none');
                }
            );

            $('.hover-effect').click(function() {
                window.location = $(this).find('a').attr('href');
            });
        });
    </script>
}


@functions {
    string GetStateBadgeClass(OrderStatus state)
    {
        return state switch
        {
            OrderStatus.Completed => "badge bg-success text-white",
            OrderStatus.Pending => "badge bg-secondary text-white",
            OrderStatus.InProgress => "badge bg-danger text-white",
            OrderStatus.Canceled => "badge bg-warning text-dark",
            OrderStatus.Shipped => "badge bg-info text-white",
            _ => "badge bg-light text-dark"
        };
    }
}
