@{
    ViewData["Title"] = "Email Confirmed";
    ViewData["Subtitle"] = "Your account is now active";
    Layout = "~/MovieMart/Areas/Identity/Views/Shared/_Layout.cshtml";
}

<div class="auth-content text-center">
    <div class="mb-4">
        <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: var(--primary-color);"></i>
    </div>
    <h3 class="mb-3">Email Verified!</h3>
    <p class="mb-4">
        Thank you for confirming your email address. Your MovieMart account is now active.
    </p>

    <div class="d-grid gap-2">
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-house me-2"></i>Go to Homepage
        </a>
        <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-auth">
            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In Now
        </a>
    </div>
</div>