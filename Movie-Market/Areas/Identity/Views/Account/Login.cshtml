@model DAL.ViewModels.User.LoginVM

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Sign in to your account</h3>
            </div>
            <div class="card-body">
                <form asp-area="Identity" asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </form>

                <hr />

                <div class="text-center">
                    <a asp-action="ForgetPassword">Forgot your password?</a>
                </div>
            </div>
            <div class="card-footer text-center">
                <p>Don't have an account? <a asp-action="Register">Register now</a></p>
                <!-- External login providers -->
                <form asp-action="ExternalLogin" method="post" class="mt-2">
                    <button type="submit" name="provider" value="Google" class="btn btn-outline-danger">
                        <i class="fab fa-google"></i> Sign in with Google
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}