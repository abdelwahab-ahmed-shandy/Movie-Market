@{
    ViewData["Title"] = "Password Reset Success";
}

<div class="row justify-content-center">
    <div class="col-lg-14">
        <div class="auth-card shadow-lg">
            <div class="auth-header text-center mb-4">
                <img src="~/Assets/Customer/images/logo.png" alt="BrainSprint Logo" width="80" height="80" class="mb-3">
                <h2 class="fw-bold text-white">Password Reset Success</h2>
            </div>

            <div class="text-center p-4">
                @if (TempData["notification"] != null)
                {
                    <div class="alert alert-@TempData["MessageType"] mb-4">
                        @TempData["notification"]
                    </div>
                }
                else
                {
                    <div class="alert alert-success mb-4">
                        Your password has been reset successfully
                    </div>
                }

                <div class="d-grid mb-3">
                    <a asp-action="Login" class="btn btn-accent btn-lg py-3">
                        Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>