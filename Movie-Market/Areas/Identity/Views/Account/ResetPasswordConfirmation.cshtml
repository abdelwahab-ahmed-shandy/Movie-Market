@{
    ViewData["Title"] = "Password Reset Success - MovieMart";
}

<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-lg-5 col-md-8">
        <div class="auth-card shadow-lg rounded-4 overflow-hidden border-0 animate__animated animate__fadeIn">
            <!-- Card Header with Success Styling -->
            <div class="card-header bg-gradient-success-to-info text-white py-4">
                <div class="d-flex align-items-center justify-content-center animate__animated animate__fadeInDown">
                    <i class="bi bi-check-circle-fill fs-1 me-3"></i>
                    <div>
                        <h2 class="mb-0 text-center fw-bold">Password Reset Success</h2>
                        <p class="mb-0 text-center opacity-75">You can now login with your new password</p>
                    </div>
                </div>
            </div>

            <!-- Card Body -->
            <div class="card-body p-4 p-md-5 text-center">
                @if (TempData["notification"] != null)
                {
                    <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["notification"]
                    </div>
                }
                else
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <i class="bi bi-check-circle-fill me-2"></i> Your password has been reset successfully
                    </div>
                }

                <!-- Success Animation -->
                <div class="success-animation mb-4 animate__animated animate__bounceIn animate__delay-1s">
                    <div class="checkmark-circle">
                        <div class="checkmark"></div>
                    </div>
                </div>

                <!-- Action Button -->
                <div class="d-grid animate__animated animate__fadeIn animate__delay-2s">
                    <a asp-action="Login" class="btn btn-primary btn-lg rounded-pill fw-bold py-3">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Back to Login
                    </a>
                </div>

                <!-- Additional Help -->
                <div class="text-center mt-4 animate__animated animate__fadeIn animate__delay-3s">
                    <p class="small text-muted mb-0">
                        Having trouble? <a href="#" class="text-accent fw-bold">Contact support</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <style>
        .min-vh-100 {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(23, 162, 184, 0.1) 100%);
        }

        .auth-card {
            border: none;
            background: rgba(33, 37, 41, 0.95);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

            .auth-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

        .bg-gradient-success-to-info {
            background: linear-gradient(135deg, #28a745 0%, #17a2b8 100%);
        }

        .btn-primary {
            background-color: #6c5ce7;
            border-color: #6c5ce7;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #5a4bd6;
                border-color: #5a4bd6;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
            }

        .text-accent {
            color: #a29bfe !important;
            transition: all 0.2s ease;
        }

            .text-accent:hover {
                color: #6c5ce7 !important;
            }

        /* Success animation styles */
        .success-animation {
            margin: 30px auto;
        }

        .checkmark-circle {
            width: 80px;
            height: 80px;
            position: relative;
            display: inline-block;
            vertical-align: top;
        }

            .checkmark-circle .checkmark {
                width: 80px;
                height: 80px;
            }

                .checkmark-circle .checkmark:after {
                    content: '';
                    display: block;
                    width: 25px;
                    height: 50px;
                    border: solid #28a745;
                    border-width: 0 5px 5px 0;
                    transform: rotate(45deg);
                    position: absolute;
                    top: 10px;
                    left: 28px;
                    animation: checkmark 0.8s ease-in-out;
                }

        @@keyframes checkmark {
            0% {
                height: 0;
                width: 0;
                opacity: 0;
            }

            50% {
                height: 0;
                width: 25px;
                opacity: 1;
            }

            100% {
                height: 50px;
                width: 25px;
                opacity: 1;
            }
        }
    </style>
}