@{
    ViewData["Title"] = "Reset Link Sent";
}

<div class="row justify-content-center">
    <div class="col-lg-14">
        <div class="auth-card shadow-lg">
            <div class="auth-header text-center mb-4">
                <img src="~/Assets/Customer/images/logo.png" alt="BrainSprint Logo" width="80" height="80" class="mb-3">
                <h2 class="fw-bold text-white">Reset Link Sent</h2>
            </div>

            <div class="text-center p-4">
                @if (TempData["notification"] != null)
                {
                    <div class="alert alert-@TempData["MessageType"] mb-4">
                        @TempData["notification"]
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-4">
                        If your email is registered, you'll receive a password reset link
                    </div>
                }

                <p class="text-light mb-4">
                    Please check your email and follow the instructions to reset your password.
                </p>

                <div class="text-center">
                    <p class="mb-0 text-light">
                        Didn't receive the email? <a asp-action="ForgetPassword" class="text-accent fw-bold">Try again</a>
                    </p>
                    <p class="mb-0 text-light mt-2">
                        <a asp-action="Login" class="text-accent">Back to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>