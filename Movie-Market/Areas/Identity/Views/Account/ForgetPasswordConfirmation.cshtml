@{
    ViewData["Title"] = "Reset Link Sent";
}

<div class="row justify-content-center align-items-center min-vh-100 py-5">
    <div class="col-lg-5 col-md-8">
        <div class="auth-card shadow-lg rounded-4 overflow-hidden border-0 animate__animated animate__fadeIn">
            <div class="auth-header text-center p-4 bg-gradient-primary">
                <div class="logo-container mb-3 animate__animated animate__bounceIn">
                    <img src="~/Assets/Customer/imag/favicon.png" alt="MovieMart Logo" width="80" height="80"
                         class="img-fluid">
                </div>
                <h2 class="fw-bold text-white mb-0 animate__animated animate__fadeInDown">Reset Link Sent</h2>
            </div>

            <div class="auth-body p-4 p-md-5 text-center">
                @if (TempData["notification"] != null)
                {
                    <div class="alert alert-@TempData["MessageType"] alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        @TempData["notification"]
                    </div>
                }
                else
                {
                    <div class="alert alert-info alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <i class="bi bi-envelope-check me-2"></i> If your email is registered, you'll receive a password reset link
                    </div>
                }

                <div class="success-icon animate__animated animate__fadeIn animate__delay-1s mb-4">
                    <i class="bi bi-envelope-check text-accent" style="font-size: 3rem;"></i>
                </div>

                <p class="text-muted mb-4 animate__animated animate__fadeIn animate__delay-1s">
                    Please check your email inbox (and spam folder) and follow the instructions to reset your password.
                </p>

                <div class="d-grid gap-2 animate__animated animate__fadeIn animate__delay-2s">
                    <a asp-action="ForgetPassword" class="btn btn-outline-accent py-2">
                        <i class="bi bi-arrow-counterclockwise me-2"></i> Resend Email
                    </a>
                    <a asp-action="Login" class="btn btn-accent py-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Back to Login
                    </a>
                </div>

                <div class="text-center mt-4 animate__animated animate__fadeIn animate__delay-2s">
                    <p class="small text-muted mb-0">
                        Didn't receive the email? Check your spam folder or
                        <a asp-action="ForgetPassword" class="text-accent fw-bold">try another email address</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <style>
        .min-vh-100 {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(108, 92, 231, 0.1) 0%, rgba(162, 155, 254, 0.1) 100%);
        }

        .auth-card {
            border: none;
            background: rgba(33, 37, 41, 0.95);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

            .auth-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
        }

        .btn-accent {
            background-color: #6c5ce7;
            border-color: #6c5ce7;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-accent:hover {
                background-color: #5a4bd6;
                border-color: #5a4bd6;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(108, 92, 231, 0.3);
            }

        .btn-outline-accent {
            border-color: #6c5ce7;
            color: #6c5ce7;
            transition: all 0.3s ease;
        }

            .btn-outline-accent:hover {
                background-color: #6c5ce7;
                color: white;
            }

        .text-accent {
            color: #a29bfe !important;
            transition: all 0.2s ease;
        }

            .text-accent:hover {
                color: #6c5ce7 !important;
            }

        .success-icon {
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        .logo-container {
            transition: transform 0.3s ease;
        }

            .logo-container:hover {
                transform: scale(1.1);
            }
    </style>
}
