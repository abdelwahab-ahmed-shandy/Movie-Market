@{
    ViewData["Title"] = "Maintenance Mode";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}

@section Styles {
    <style>
        .error-page {
            height: 100vh;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
        }

        .error-card {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            background: white;
        }

        .error-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }

        .error-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        @@media (max-width: 576px) {
            .error-actions {
                flex-direction: column;
            }
        }
    </style>
}

<div class="error-card text-center">
    <div class="error-icon text-info">
        <i class="fas fa-tools"></i>
    </div>
    <h1>Maintenance Mode</h1>
    <p class="lead">We're performing scheduled maintenance. We'll be back soon!</p>

    <div class="progress my-4" style="height: 10px;">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 75%"></div>
    </div>

    <div class="alert alert-info text-start">
        <h5><i class="fas fa-clock me-2"></i> Estimated Time</h5>
        <p>We expect to be back online by @DateTime.Now.AddHours(2).ToString("f")</p>
    </div>

    <div class="error-actions">
        <a href="javascript:location.reload()" class="btn btn-primary">
            <i class="fas fa-sync-alt me-2"></i>Refresh
        </a>
    </div>
</div>