@{
    ViewData["Title"] = "Server Error";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}

@section Styles {
    <style>
        .error-page {
            height: 100vh;
            display: flex;
            align-items: center;
            background-color: #f8f9fa;
        }

        .error-card {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            background: white;
        }

        .error-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }

        .error-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        @@media (max-width: 576px) {
            .error-actions {
                flex-direction: column;
            }
        }
    </style>
}

<div class="error-card text-center">
    <div class="error-icon text-danger">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1>500 - Server Error</h1>
    <p class="lead">Something went wrong on our server. Please try again later.</p>

    <div class="error-actions">
        <a href="/" class="btn btn-primary">
            <i class="fas fa-home me-2"></i>Home
        </a>
        <a href="mailto:support@moviemarket.com" class="btn btn-outline-danger">
            <i class="fas fa-envelope me-2"></i>Contact Support
        </a>
    </div>
</div>