@{
    ViewData["Title"] = "Server Error";
    Layout = "~/Areas/Identity/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .server-error-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 200px);
            padding: 2rem;
        }

        .server-error-card {
            max-width: 650px;
            width: 100%;
            padding: 3rem;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            background: rgba(33, 37, 41, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(253, 121, 168, 0.3);
            text-align: center;
            animation: fadeIn 0.5s ease-out;
        }

        .server-error-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            color: var(--accent-color);
            animation: pulse 1.5s infinite;
        }

        .server-error-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--light-color);
            background: linear-gradient(90deg, #fd79a8, #e84393);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .server-error-description {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .server-error-actions {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 2.5rem;
            flex-wrap: wrap;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
            }
        }

        @@media (max-width: 768px) {
            .server-error-card {
                padding: 2rem 1.5rem;
                margin: 0 1rem;
            }

            .server-error-title {
                font-size: 2rem;
            }

            .server-error-icon {
                font-size: 4rem;
            }

            .server-error-actions {
                flex-direction: column;
                gap: 1rem;
            }

                .server-error-actions .btn {
                    width: 100%;
                }
        }
    </style>
}

<div class="server-error-container">
    <div class="server-error-card">
        <div class="server-error-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <h1 class="server-error-title">500 - Server Error</h1>
        <p class="server-error-description">
            Oops! Something went wrong on our end. Our team has been notified and we're working to fix it.
            <br>Please try again later or contact support if the problem persists.
        </p>

        <div class="server-error-actions">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i> Return Home
            </a>
            <a href="mailto:support@moviemart.com" class="btn btn-outline-danger">
                <i class="bi bi-envelope-fill me-2"></i> Contact Support
            </a>
        </div>
    </div>
</div>