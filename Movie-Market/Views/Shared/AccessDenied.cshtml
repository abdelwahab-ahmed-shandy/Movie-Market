@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Areas/Identity/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .error-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 200px); /* Account for header and footer */
            padding: 2rem 0;
        }

        .error-card {
            max-width: 600px;
            width: 100%;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background: rgba(33, 37, 41, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
            animation: fadeIn 0.5s ease-out;
        }

        .error-icon {
            font-size: 5rem;
            margin-bottom: 1.5rem;
            color: var(--accent-color);
        }

        .error-card h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--light-color);
        }

        .error-card p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 2rem;
        }

        .error-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        @@media (max-width: 576px) {
            .error-card {
                padding: 1.5rem;
                margin: 0 1rem;
            }

            .error-actions {
                flex-direction: column;
                gap: 0.75rem;
            }

                .error-actions .btn {
                    width: 100%;
                }
        }
    </style>
}

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <h1>403 - Access Denied</h1>
        <p>You don't have permission to access this resource. If you believe this is an error, please contact support.</p>

        <div class="error-actions">
            <a href="/" class="btn btn-primary">
                <i class="bi bi-house-door me-2"></i>Return Home
            </a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Login", "Account", new { returnUrl = Context.Request.Path })"
                   class="btn btn-success">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </a>
            }
            else
            {
                <a href="@Url.Action("Contact", "Support")"
                   class="btn btn-info">
                    <i class="bi bi-question-circle me-2"></i>Request Access
                </a>
            }
        </div>
    </div>
</div>